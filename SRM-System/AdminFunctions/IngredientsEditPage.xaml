<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SRM_System.AdminFunctions.IngredientsEditPage"
             xmlns:models="clr-namespace:SRM_System.Models"
             x:DataType="models:Ingredient"
             Title="Ингредиенты">
    <ContentPage.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#2A2922"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="WidthRequest" Value="150"/>
        </Style>
        <Style TargetType="SwipeView">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="White"/>
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="#7D5642" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <RefreshView
        x:Name="IngredientsRefresh"
        Refreshing="ToRefreshingIngredientsRefresh"
        RefreshColor="#506D2F">
        <CollectionView
            SelectionMode="Single"
            x:Name="IngredientsCollectionView">
            <CollectionView.Header>
                <VerticalStackLayout
                    Spacing="10">
                    <HorizontalStackLayout>
                        <Frame HorizontalOptions="Fill"
                   HeightRequest="{OnPlatform 60, Android=60, iOS=60, WinUI=100}" 
                   Padding="{OnPlatform 0, Android=0, iOS=0, WinUI=35}" 
                           WidthRequest="160"
                   CornerRadius="20">
                            <Frame.Margin>
                                <OnPlatform x:TypeArguments="Thickness">
                                    <On Platform="iOS, Android" Value="10,10,0,0"/>
                                    <On Platform="WinUI" Value="400,0,400,20"/>
                                </OnPlatform>
                            </Frame.Margin>
                            <Entry VerticalOptions="Center"
                       Placeholder="Название" 
                       Margin="10,0,0,0"
                       Keyboard="Default"
                       x:Name="NameEntry"/>
                        </Frame>
                        <Frame HorizontalOptions="Fill"
                   HeightRequest="{OnPlatform 60, Android=60, iOS=60, WinUI=100}" 
                   Padding="{OnPlatform 0, Android=0, iOS=0, WinUI=35}" 
                           WidthRequest="100"
                   CornerRadius="20">
                            <Frame.Margin>
                                <OnPlatform x:TypeArguments="Thickness">
                                    <On Platform="iOS, Android" Value="10,10,0,0"/>
                                    <On Platform="WinUI" Value="400,0,400,20"/>
                                </OnPlatform>
                            </Frame.Margin>
                            <Entry VerticalOptions="Center"
                       Placeholder="Количество" 
                       Margin="10,0,0,0"
                       Keyboard="Default"
                       x:Name="QuantityEntry"/>
                        </Frame>
                        <Frame HorizontalOptions="Fill"
                   HeightRequest="{OnPlatform 60, Android=60, iOS=60, WinUI=100}" 
                   Padding="{OnPlatform 0, Android=0, iOS=0, WinUI=35}" 
                           WidthRequest="60"
                   CornerRadius="20">
                            <Frame.Margin>
                                <OnPlatform x:TypeArguments="Thickness">
                                    <On Platform="iOS, Android" Value="10,10,0,0"/>
                                    <On Platform="WinUI" Value="400,0,400,20"/>
                                </OnPlatform>
                            </Frame.Margin>
                            <Entry VerticalOptions="Center"
                       Placeholder="Номер" 
                       Margin="5,0,0,0"
                       Keyboard="Numeric"
                       x:Name="IdEntry"/>
                        </Frame>
                    </HorizontalStackLayout>
                    <Button
                        Text="Добавить"
                        Clicked="OnIngredientAddClicked"
                        Style="{StaticResource ButtonStyle}"/>
                </VerticalStackLayout>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.LeftItems>
                            <SwipeItems>
                                <SwipeItem
                                IconImageSource="delete.png"
                                BackgroundColor="#7D5642"
                                Invoked="OnDeleteIngredientClick">
                                </SwipeItem>
                            </SwipeItems>
                        </SwipeView.LeftItems>

                        <Frame 
                       BorderColor="Black"
                       Margin="5"
                       Padding="5"
                       CornerRadius="15"
                       HasShadow="True">
                            <VerticalStackLayout>
                                <HorizontalStackLayout
                                    Spacing="5">
                                    <Label
                                    Text="Номер: "
                                    FontSize="Medium"/>
                                    <Label
                            Text="{Binding Id}"
                            FontSize="Medium"
                            FontAttributes="Bold"/>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout>
                                    <Label
                                    Text="Мест: "
                                        FontSize="Medium"/>
                                    <Label
                            Text="{Binding Quantity}"
                            FontAttributes="Bold" 
                                        FontSize="Medium"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout>
                                    <Label
                            Text="{Binding Name}"
                            FontAttributes="Bold"
                                        FontSize="Medium"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>