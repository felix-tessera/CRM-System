<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SRM_System.Models"
             x:Class="SRM_System.AdminFunctions.TablesEditPage"
             x:DataType="models:Table"
             Title="Управление столами">
    <CollectionView VerticalScrollBarVisibility="Always"
                        x:Name="TablesCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Black">
                    <VerticalStackLayout>
                        <Label
                       Text="{Binding Id}"
                       HeightRequest="60"
                       WidthRequest="60" />
                        <Label
                       Text="{Binding Seats}"
                       FontAttributes="Bold" />
                        <Label
                       Text="{Binding State}"
                       FontAttributes="Italic"
                       VerticalOptions="End" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>